@model List<Product>
@{
    ViewData["Title"] = "ProductList";
}

@section Scripts
{
    <script>
        $(document).ready(function() {
            $("#btn-create-excel").click(function() {
                $.ajax({
                    url:"/Home/CreateExcell",
                    type:"GET",
                    datatype:"json",
                    success:function(data) {
                        $(".toast-body").html("Excell oluşturma isteği alınmıştır. Tamamlandığında bilgilendirileceksiniz.");
                        $("#liveToast").show();
                        toastTimeOut = setTimeout(() => {
                                $("#liveToast").hide();
                            },
                            3000);
                    },
                    error:function(err) {
                        alert("Excell dosyasını indirebilmek için üye olunuz!");
                    }
                })
            })
        })
    </script>
}


<p>
    <a class="btn btn-primary" href="#" id="btn-create-excel">Create Excel</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }
    </tbody>
</table>